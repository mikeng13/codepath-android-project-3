<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.codepath.apps.simpletweeter.activities.PostTweetActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivUserProfileImage"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivUserProfileImage"
        android:layout_alignParentTop="true"
        android:text="Mike"
        android:layout_marginBottom="3dp"
        android:id="@+id/tvUserName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScreeName"
        android:text="mike@opti"
        android:layout_below="@id/tvUserName"
        android:layout_toRightOf="@id/ivUserProfileImage"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivUserProfileImage"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:id="@+id/etComposeTweet"
        android:layout_below="@id/ivUserProfileImage"
        android:hint="What's happening?"/>

</RelativeLayout>
